<div class="container mt-5">
    <h1 class="text-center mb-4">Lista de Productos</h1>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
        {{#each listProducts}}
        <div class="col mb-4">
            <div class="card h-100 bg-light">
                <div class="card-header bg-primary text-white">
                    <i class="bi bi-tag"></i> Code: {{this.code}}
                </div>
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-file-text"></i> Description: {{this.description}}</li>
                        <li><i class="bi bi-currency-dollar"></i> Price: ${{this.price}}</li>
                        <li><i class="bi bi-grid"></i> Category: {{this.category}}</li>
                        <li><i class="bi bi-check-circle"></i> Status: {{this.status}}</li>
                        <li><i class="bi bi-box"></i> Stock: {{this.stock}}</li>
                        <li>
                            <i class="bi bi-image"></i> Image: <img src="{{this.thumbnail}}" alt="{{this.title}}" class="img-fluid mt-2">
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<div class="d-flex justify-content-center mt-4">
    {{#if result.hasPrevPage}}
        <a href="{{this.prevLink}}" class="btn btn-primary me-2"><< Anterior</a>
    {{/if}}
    <span class="btn btn-secondary">{{this.page}}</span>
    {{#if result.hasNextPage}}
        <a href="{{this.nextLink}}" class="btn btn-primary ms-2">Siguiente >></a>
    {{/if}}
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>


